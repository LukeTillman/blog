{% extends "./_common/base.njk" %}

{# On home page, just use the site title #} 
{% block title %}{{ config.title }}{% endblock %}


{# List page of articles on home page #}
{% block content %}
{% for p in page.posts.data %}
<article class="post">
  <ul class="post-tags">
    {% for t in p.tags.data %}
    <li class="post-tag">
      <a href="{{ url_for(t.path) }}">{{ t.name }}</a>
    </li>
    {% endfor %}
  </ul>
  <h1 class="title">
    <a href="{{ url_for(p.path) }}">
      {{ p.title }}
    </a>
  </h1>
  <p class="post-metadata">
    Posted on <span class="icon"><i class="fa fa-clock-o"></i></span>
    <time class="post-time" datetime="{{ p.date.toISOString() }}">{{ p.date.format('LL') }}</time>
  </p>
  <p>
    {{ p.excerpt }}
  </p>
</article>
{% endfor %}
{% endblock %}


{# Include site bio on sidebar #}
{% block sidebar %}
<aside class="bio">
  <figure class="image is-128x128">
    <img class="is-circle" src="/images/luke.jpg">
  </figure>
  <br/>
  <h4 class="title is-4">
    {{ config.title }}
  </h4>
  <p>
    {{ config.description }}
  </p>
</aside>
{% endblock %}