{# Partial view to render a list of posts and pagination #}
{% for p in page.posts.data %}
<article class="post">
  <ul class="post-tags">
    {% for t in p.tags.data %}
    <li class="post-tag">
      <a href="{{ url_for(t.path) }}">{{ t.name }}</a>
    </li>
    {% endfor %}
  </ul>
  <h1 class="title">
    <a href="{{ url_for(p.path) }}">
      {{ p.title }}
    </a>
  </h1>
  <p class="post-metadata">
    Posted on <span class="icon"><i class="fa fa-clock-o"></i></span>
    <time class="post-time" datetime="{{ p.date.toISOString() }}">{{ p.date.format('LL') }}</time>
  </p>
  <p>
    {{ p.excerpt }}
  </p>
</article>
{% endfor %}

<nav class="level posts-pagination">
  <div class="level-left">
    {% if page.prev !== 0 %}
    <div class="level-item">
      <a class="button" href="{{ url_for(page.prev_link) }}">
        <span class="icon"><i class="fa fa-angle-left"></i></span>
        <span>Newer Posts</span>
      </a>
    </div>
    {% endif %}
  </div>

  <div class="level-right">
    {% if page.next !== 0 %}
    <div class="level-item">
      <a class="button" href="{{ url_for(page.next_link) }}">
        <span>Older Posts</span>
        <span class="icon"><i class="fa fa-angle-right"></i></span>
      </a>
    </div>
    {% endif %}
  </div>
</nav>