{% extends "./_common/base.njk" %}

{% block content %}
<article class="post">
  <h1 class="title">{{ page.title }}</h1>
  <p class="post-metadata">
    Posted on <span class="icon"><i class="fa fa-clock-o"></i></span> <time datetime="{{ page.date.toISOString() }}">{{ page.date.format('LL') }}</time>
  </p>
  <div class="content">
    {{ page.content | safe }}
  </div>
</article>
{% endblock %}

{% block sidebar %}
<aside class="bio">
  <figure class="image is-128x128">
    <img class="is-circle" src="/images/luke.jpg">
  </figure>
  <br/>
  <h4 class="title is-4">
    {{ config.author }}
  </h4>
  <p>
    I'm an engineer, soccer fan, political junkie, and lover of all nerdery. Currently employed as
    a Technical Evangelist at DataStax where I frequently work with Cassandra, .NET, and Node.js.
  </p>
</aside>
{% endblock %}